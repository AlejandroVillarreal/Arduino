#include <Keypad.h>
#include <U8glib.h>

//------DEFINIR PUERTOS LCD------/
U8GLIB_ST7920_128X64_1X u8g(52, 51, 53, U8G_PIN_NONE);


//-----DEFINIR CONSTANTES DEL TECLADO-----/
const byte Fila = 4;
const byte Columna = 4;

char keys[Fila][Columna] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};
byte FilaPins[Fila] = {5, 4, 3, 2};
byte ColumnaPins[Columna] = {8, 7, 6, 9};

//----------INICIAR EL TECLADO----------/
Keypad keypad = Keypad( makeKeymap(keys), FilaPins, ColumnaPins, Fila, Columna );

//----DECLARACION VARIABLE contador---/
int contador;
char numProblema;
//----------FUNCION PREPARAR EL LCD----------/
void u8g_prepare(void) {
  u8g.setFont(u8g_font_5x7);
  u8g.setFontRefHeightExtendedText();
  u8g.setDefaultForegroundColor();
  u8g.setFontPosTop();
}



//===============================INICIO DE SETUP===================================/
void setup() {
  Serial.begin(9600);
  u8g_prepare();
    u8g.firstPage();
  do {
  menuPrincipal();
  }while(u8g.nextPage());
  
  }

void loop() {
 
 char keyMenu = keypad.getKey(); //VARIABLE keyMenu CONTROLA EL MENU//
 
// //====================================================================================================================================================================================================
//  //=================MENU SELECCION U.TEMATICA I===============//


if (keyMenu == 'A' && contador==0){
  u8g.firstPage();
  do {
  menuUnidadTematica1();

  contador='A';
  }
  while (u8g.nextPage());
  
}

if (keyMenu == '1' && contador=='A'){
  u8g.firstPage();
  do {
 problemaInterLi ();

  contador='1';
  }
  while (u8g.nextPage());

  
}
if (keyMenu == 'A' && contador=='1'){
  u8g.firstPage();
  do {
 Verdadero ();

  contador='1';
  }
  while (u8g.nextPage());

  
}
if (keyMenu == 'B' && contador=='1'){
  u8g.firstPage();
  do {
 Falso ();

  contador='1';
  }
  while (u8g.nextPage());

 
}
if (keyMenu =='2' && contador=='A'){
  u8g.firstPage();
  do {
    NewtonAdelante();
    contador='2';
  }
  while (u8g.nextPage());
}
if (keyMenu =='A' && contador=='2'){
  u8g.firstPage();
  do {
    Falso();
    contador='2';
  }
  while (u8g.nextPage());
}
if (keyMenu =='B' && contador=='2'){
  u8g.firstPage();
  do {
    Verdadero();
    contador='2';
  }while(u8g.nextPage());
}

if (keyMenu=='3' && contador=='A'){
  u8g.firstPage();
  do{
    NewtonAtras();
    contador='3';
  }while(u8g.nextPage());
}
if (keyMenu=='A' && contador=='3'){
  u8g.firstPage();
  do{
    Falso();
    contador='3';
  }while(u8g.nextPage());
}
if (keyMenu=='B' && contador=='3'){
  u8g.firstPage();
  do {
    Verdadero();
    contador='3';
  }while(u8g.nextPage());
}
//  //=================MENU SELECCION U.TEMATICA II===============//
 


if (keyMenu == 'B' && contador==0){
  u8g.firstPage();
  do {
  menuUnidadTematica2();

  contador='B';
  }
  while (u8g.nextPage());
}


//  //=================MENU SELECCION U.TEMATICA III===============//
 


if (keyMenu == 'C' && contador==0){
  u8g.firstPage();
  do {
  menuUnidadTematica3();

  contador='C';
  }
  while (u8g.nextPage());
}

 //  //=================MENU SELECCION U.TEMATICA IV===============//
 


if (keyMenu == 'D' && contador==0){
  u8g.firstPage();
  do {
  menuUnidadTematica4();

  contador='D';
  }
  while (u8g.nextPage());
}



 // ==================REGRESAR AL MENU DE UNIDAD TEMATICA ==================//
if (keyMenu == '*') 
{
  u8g.firstPage();
  do {
  menuPrincipal();
  contador =0;
  }while (u8g.nextPage());
 

}

Serial.println(keyMenu);
Serial.println(contador);
delay(100);

}


//==========================================================INFORMACION DE LAS PANTALLAS===================================================================================================//
void menuPrincipal(){
  u8g.drawStr(5,0,"A)Unidad Tematica I");
  u8g.drawStr(5,10,"B)Unidad Tematica II");
  u8g.drawStr(5,20,"C)Unidad Tematica III");
  u8g.drawStr(5,30,"D)Unidad Tematica IV");
}

 //==========================================================UNIDAD NUMERO 1===================================================================================================//
    void menuUnidadTematica1(){
